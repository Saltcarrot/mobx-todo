{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "#": ["./"],
      "#models": ["./shared/models"],
      "#api": ["./shared/api"],
      "#ui": ["./shared/ui"],
      "#todo": ["./entities/todo"]
    }
  },
  "include": ["src", "declaration.d.ts"]
}